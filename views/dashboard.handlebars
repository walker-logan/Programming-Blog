<div id="dashboard">
  <div id="createPostContainer">
    <a id="createPostLink" href="/dashboard/new">Create New Post</a>
  </div>

  <div id="userPostsContainer">
    {{#if posts.length}}
      <h2>Your Posts:</h2>
      {{#each posts as |post|}}
        <div class="userPost">
          <h3 class="postTitle">{{post.title}}</h3>
          <p class="postContent">{{post.content}}</p>
          <a class="editPostLink" href="/dashboard/edit/{{post.id}}">Edit</a>
          <button class="deletePostBtn" data-id="{{post.id}}">Delete</button>
        </div>
      {{/each}}
    {{else}}
      <h2>You currently have no posts...</h2>
    {{/if}}
  </div>
</div>

<script src="/js/dashboard.js"></script>