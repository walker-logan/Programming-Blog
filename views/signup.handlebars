<div id="signupSection">
  <h1 class="boxTitle">Signup</h1>
  <form id="signupForm" class="formBox">
    <div class="inputGroup">
      <label class="emailLabel" for="nameSignup">Name: </label>
      <input
        class="loginBox"
        type="text"
        id="nameSignup"
        name="nameSignup"
        placeholder="John Example Doe"
      />
    </div>
    <div class="inputGroup">
      <label class="emailLabel" for="emailSignup">Email: </label>
      <input
        class="loginBox"
        type="text"
        id="emailSignup"
        name="emailSignup"
        placeholder="Example@email.com"
      />
    </div>
    <div class="inputGroup">
      <label class="passwordLabel" for="passwordSignup">Password: </label>
      <input
        class="loginBox"
        type="password"
        id="passwordSignup"
        name="passwordSignup"
        placeholder="YourPassword"
      />
    </div>

    <button class="pageBtn borderRad" type="submit">Signup</button>

    <p>Already have an account? <a href="/login">Click here to Login</a></p>

  </form>
</div>

<script src="/js/signup.js"></script>