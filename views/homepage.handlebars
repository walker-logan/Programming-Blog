<div id="homepage">
  {{#if posts}}
    {{#each posts as |post|}}
      <div class="postSummary">
        <a href="/post/{{post.id}}">
          <h2 class="postTitle">{{post.title}}</h2>
          <p class="postDetails">Created by:
            {{post.user.name}}
            on
            {{formatDate post.createdAt}}</p>
          <p class="postSnippet">{{snippet post.post_content}}</p>
        </a>
      </div>
    {{/each}}
  {{else}}
    <h2>No current posts...</h2>
  {{/if}}
</div>