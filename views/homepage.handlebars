<div id="homepage">
  {{#if loggedIn}}
    {{#if posts}}
      {{#each posts as |post|}}
        <div class="postSummary">
          <a href="/post/{{post.id}}">
            <h2 class="postTitle">{{post.title}}</h2>
            <p class="postDetails">Created by:
              {{post.user.name}}
              on
              {{post.createdAt}}</p>
          </a>
        </div>
      {{/each}}
    {{else}}
      <h2>No Posts Found</h2>
    {{/if}}
  {{else}}
    <h2>Unlock the World of Tech and Code: Your Gateway to Innovation and
      Expertise</h2>
  {{/if}}
</div>